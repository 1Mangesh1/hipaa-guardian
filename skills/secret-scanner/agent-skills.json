{
  "name": "secret-scanner",
  "version": "1.0.0",
  "description": "Comprehensive secret detection skill for AI agents. Detects API keys, tokens, passwords, and credentials across 50+ providers. Features entropy-based detection, git history scanning, and CI/CD integration.",
  "author": {
    "name": "1mangesh1",
    "url": "https://github.com/1Mangesh1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1Mangesh1/dev-skills"
  },
  "license": "MIT",
  "keywords": [
    "secrets",
    "security",
    "api-keys",
    "tokens",
    "credentials",
    "passwords",
    "detection",
    "scanning",
    "git-security",
    "pre-commit",
    "cicd",
    "aws",
    "github",
    "stripe",
    "openai"
  ],
  "categories": [
    "security",
    "devops",
    "compliance"
  ],
  "skills": [
    {
      "name": "secret-scanner",
      "path": ".",
      "entry": "SKILL.md",
      "invocation": {
        "commands": [
          "/secret-scanner",
          "/secrets",
          "/scan-secrets"
        ],
        "triggers": [
          "scan for secrets",
          "find API keys",
          "detect credentials",
          "check for hardcoded passwords",
          "find leaked tokens",
          "scan git history for secrets",
          "audit repository for credentials",
          "check for exposed keys",
          "find AWS keys",
          "detect GitHub tokens",
          "scan for private keys"
        ]
      },
      "capabilities": [
        {
          "name": "secret-detection",
          "description": "Detect secrets using 200+ regex patterns for 50+ providers"
        },
        {
          "name": "entropy-analysis",
          "description": "Detect high-entropy strings that may be unknown secrets"
        },
        {
          "name": "git-history-scan",
          "description": "Scan git commit history for leaked secrets"
        },
        {
          "name": "risk-scoring",
          "description": "Score findings 0-100 based on sensitivity and exposure"
        },
        {
          "name": "remediation-guidance",
          "description": "Provider-specific secret rotation instructions"
        },
        {
          "name": "ci-cd-integration",
          "description": "Pre-commit hooks and GitHub Actions support"
        },
        {
          "name": "allowlist-support",
          "description": "Configure known-safe patterns to skip"
        },
        {
          "name": "sarif-output",
          "description": "SARIF format for GitHub Security integration"
        }
      ],
      "tools": {
        "required": ["read", "glob", "grep"],
        "optional": ["bash", "write"]
      },
      "scripts": [
        {
          "name": "detect-secrets",
          "path": "./scripts/detect-secrets.py",
          "runtime": "python3",
          "description": "Main secret detection script"
        },
        {
          "name": "scan-git-history",
          "path": "./scripts/scan-git-history.py",
          "runtime": "python3",
          "description": "Git history secret scanner"
        },
        {
          "name": "pre-commit-hook",
          "path": "./scripts/pre-commit-hook.sh",
          "runtime": "bash",
          "description": "Git pre-commit hook for CI/CD integration"
        }
      ],
      "references": [
        {
          "name": "secret-patterns",
          "path": "./references/secret-patterns.md"
        },
        {
          "name": "remediation",
          "path": "./references/remediation.md"
        }
      ]
    }
  ],
  "compatibility": {
    "agents": [
      {
        "name": "claude-code",
        "minVersion": "1.0.0"
      },
      {
        "name": "cursor",
        "minVersion": "0.40.0"
      },
      {
        "name": "windsurf",
        "minVersion": "1.0.0"
      },
      {
        "name": "aider",
        "minVersion": "0.50.0"
      },
      {
        "name": "continue",
        "minVersion": "0.8.0"
      },
      {
        "name": "cline",
        "minVersion": "2.0.0"
      }
    ],
    "platforms": ["macos", "linux", "windows"],
    "languages": ["python", "javascript", "typescript", "java", "go", "ruby", "php", "csharp"]
  },
  "requirements": {
    "python": ">=3.8"
  }
}
